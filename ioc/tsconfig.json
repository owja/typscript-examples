{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "preserveConstEnums": true
  },
  "exclude": [
    "./node_modules"
  ]
}